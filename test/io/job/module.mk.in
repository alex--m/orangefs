DIR := test/io/job
TEST_IO_JOB_DIR := test/io/job

LOCALTESTSRC := \
	$(DIR)/job-client-example.c \
	$(DIR)/job-client-multi-example.c \
	$(DIR)/job-flow-server.c \
	$(DIR)/job-server-example.c \
	$(DIR)/req-sched-job-test.c \
	$(DIR)/trove-job-create-toy.c \
	$(DIR)/trove-job-io.c \
	$(DIR)/trove-job-ls.c \
