DIR := test/io/flow

LOCALTESTSRC := \
	$(DIR)/test-harness-server.c\
	$(DIR)/test-harness-client.c\
	$(DIR)/test-harness-client-from-trove.c\
	$(DIR)/test-harness-server-trove.c

TESTSRC += $(LOCALTESTSRC)

LOCALLIBS := -ldb -lrt -lpthread
LOCALTESTS := $(patsubst %.c,%, $(LOCALTESTSRC))
