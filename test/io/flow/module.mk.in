DIR := test/io/flow

TEST_IO_FLOW_DIR_SRC := \
	$(DIR)/test-harness-server-trove.c \
	$(DIR)/test-harness-client.c

TESTSRC += $(TEST_IO_FLOW_DIR_SRC)

test/io/flow/test-harness-server-trove: test/io/flow/test-harness-server-trove.o
ifdef QUIET_COMPILE
	@echo "  LD		$@"
	@$(LD) $< $(LDFLAGS) $(SERVERLIBS) -o $@
else
	$(LD) $< $(LDFLAGS) $(SERVERLIBS) -o $@
endif

test/io/flow/test-harness-client: test/io/flow/test-harness-client.o
ifdef QUIET_COMPILE
	@echo "  LD		$@"
	@$(LD) $< $(LDFLAGS) $(LIBS) -o $@
else
	$(LD) $< $(LDFLAGS) $(LIBS) -o $@
endif

