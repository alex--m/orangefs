DIR := test/io/trove

LOCALTESTSRC := \
	$(DIR)/trove-bstream.c \
	$(DIR)/trove-ls.c \
	$(DIR)/trove-mkdir.c \
	$(DIR)/trove-mkfs.c \
	$(DIR)/trove-rm.c \
	$(DIR)/test-listio.c \
	$(DIR)/trove-import.c \
	$(DIR)/trove-export.c \
	$(DIR)/trove-touch.c \
	$(DIR)/trove-create-stress.c

TESTSRC += $(LOCALTESTSRC)

LOCALLIBS := -ldb -lrt -lpthread 
LOCALTESTS := $(patsubst %.c,%, $(LOCALTESTSRC))
$(LOCALTESTS): %: %.o
ifdef QUIET_COMPILE
	@echo "  LD		$@"
	@$(LD) $< $(LDFLAGS) $(LIBS) $(LOCALLIBS) -o $@
else
	$(LD) $< $(LDFLAGS) $(LIBS) $(LOCALLIBS) -o $@
endif
