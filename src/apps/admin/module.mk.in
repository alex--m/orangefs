DIR := src/apps/admin

ADMINSRC := \
	$(DIR)/pvfs2-mkspace.c \
	$(DIR)/pvfs2-showcoll.c \
	$(DIR)/pvfs2-import.c \
	$(DIR)/pvfs2-set-debugmask.c \
	$(DIR)/pvfs2-export.c

ADMINLIBS := -ldb -lrt -lpthread

ADMINTOOLS := $(patsubst %.c, %, $(ADMINSRC))

$(ADMINTOOLS): %: %.o
ifdef QUIET_COMPILE
	@echo "  LD		$@"
	@$(LD) $< $(LDFLAGS) $(LIBS) $(ADMINLIBS) -o $@
else
	$(LD) $< $(LDFLAGS) $(LIBS) $(ADMINLIBS) -o $@
endif
