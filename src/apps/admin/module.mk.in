DIR := src/apps/admin

ADMINSRC := \
	$(DIR)/pvfs2-mkspace.c \
	$(DIR)/pvfs2-showcoll.c \
	$(DIR)/pvfs2-import.c

ADMINLIBS := -ldb -lrt -lpthread

ADMINTOOLS := $(patsubst %.c, %, $(ADMINSRC))

$(ADMINTOOLS): %: %.o test/client/sysint/helper.o
	$(LD) $< test/client/sysint/helper.o $(LDFLAGS) $(LIBS) $(ADMINLIBS) -o $@
