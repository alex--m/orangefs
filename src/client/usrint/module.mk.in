ifdef BUILD_USRINT

DIR := src/client/usrint

SRC := \
	$(DIR)/posix-pvfs.c \
	$(DIR)/request.c \
	$(DIR)/iocommon.c \
	$(DIR)/openfile-util.c \
	$(DIR)/ucache.c \
    $(DIR)/mmap.c \
	$(DIR)/aiocommon.c \
	$(DIR)/aio-pvfs.c \
    $(DIR)/pvfs-path.c

#   these routines don't need pvfs implementation and will
#   probably be removed
#	$(DIR)/acl.c \

USRC := \
 	$(DIR)/posix.c \
 	$(DIR)/stdio.c 

ifdef BUILD_JNI
USRC += \
    $(DIR)/jni_posix.c \
    $(DIR)/jni_stdio.c 
endif # BUILD_JNI

#   these routines do no need to use the pvfs descriptor
#   and will probably be removed
#	$(DIR)/socket.c \

# list of all .c files (generated or otherwise) that belong in library
LIBSRC += $(SRC)
ULIBSRC += $(USRC)

endif # BUILD_USRINT
