static PINT_sm_action mkdir_init(
        struct PINT_smcb *smcb, job_status_s *js_p)
{
    struct PINT_client_sm *sm_p = PINT_sm_frame(smcb, PINT_FRAME_CURRENT);

    gossip_debug(GOSSIP_CLIENT_DEBUG, "aio_mkdir state: init\n");
    
    memset(&sm_p->u.aio_mkdir.parent_ref, 0, sizeof(PVFS_object_ref));
    memset(&sm_p->u.aio_mkdir.lookup_resp, 0, sizeof(PVFS_sysresp_lookup));
    memset(&sm_p->u.aio_mkdir.mkdir_resp, 0, sizeof(PVFS_sysresp_mkdir));
    
    if (!(sm_p->u.aio_mkdir.pdir))
    {
        js_p->error_code = MKDIR_PDIR_NULL;
    }
    else
    {
        if (sm_p->u.aio_mkdir.directory)
        {
            js_p->error_code = 0;
        }
        else
        {
            sm_p->u.aio_mkdir.parent_ref = *(sm_p->u.aio_mkdir.pdir);
            js_p->error_code = MKDIR_DIR_REF_FOUND;
        }
    }

    return SM_ACTION_COMPLETE;
}

static PINT_sm_action mkdir_parent_ref_abs_lookup_setup(
        struct PINT_smcb *smcb, job_status_s *js_p)
{
    struct PINT_client_sm *sm_p = PINT_sm_frame(smcb, PINT_FRAME_CURRENT);
    int ret = 0;
    PVFS_fs_id lookup_fs_id;
    char pvfs_path[PVFS_PATH_MAX];
    PVFS_object_ref parent;
    js_p->error_code = 0;

    gossip_debug(GOSSIP_CLIENT_DEBUG, "aio_mkdir state: "
                 "parent_ref_abs_lookup_setup\n");

    ret = PVFS_util_resolve(sm_p->u.aio_mkdir.directory, &lookup_fs_id,
                            pvfs_path, PVFS_PATH_MAX);
    if (ret < 0)
    {
        js_p->error_code = ret;
        return SM_ACTION_COMPLETE;
    }

    parent.handle = 0;
    parent.fs_id = lookup_fs_id;

    ret = PINT_cached_config_get_root_handle(parent.fs_id, &(parent.handle));
    if (ret < 0)
    {
        js_p->error_code = ret;
        return SM_ACTION_COMPLETE;
    }

    if (strcmp(pvfs_path, "/") == 0)
    {
        sm_p->u.aio_mkdir.parent_ref.handle = parent.handle;
        sm_p->u.aio_mkdir.parent_ref.fs_id = lookup_fs_id;
        js_p->error_code = MKDIR_DIR_REF_FOUND;
    }
    else
    {
        PINT_client_sm *lookup_frame = malloc(sizeof(PINT_client_sm));
        if (lookup_frame == NULL)
        {
            js_p->error_code = -PVFS_ENOMEM;
            return SM_ACTION_COMPLETE;
        }
        memset(lookup_frame, 0, sizeof(PINT_client_sm));

        char *path = ((pvfs_path[0] == '/') ? &pvfs_path[1] : pvfs_path);

        PINT_init_msgarray_params(lookup_frame, lookup_fs_id);
        PINT_init_sysint_credential(lookup_frame->cred_p, sm_p->cred_p);
        lookup_frame->u.lookup.orig_pathname = path;
        lookup_frame->u.lookup.starting_refn = parent;
        lookup_frame->u.lookup.lookup_resp = &(sm_p->u.aio_mkdir.lookup_resp);
        lookup_frame->u.lookup.follow_link = PVFS2_LOOKUP_LINK_FOLLOW;
        lookup_frame->u.lookup.current_context = 0;
        PVFS_hint_copy(sm_p->hints, &(lookup_frame->hints));
        PVFS_hint_add(&(lookup_frame->hints), PVFS_HINT_HANDLE_NAME,
                      sizeof(PVFS_handle), &(parent.handle));

        ret = initialize_context(&lookup_frame->u.lookup, path, parent);
        if (ret != 0)
        {
            gossip_err("aio-mkdir: failed to init context (path = %s)\n", path);
            js_p->error_code = ret;
            return SM_ACTION_COMPLETE;
        }

        if (lookup_frame->u.lookup.current_context == 0 &&
                lookup_frame->u.lookup.contexts[0].total_segments == 0)
        {
            free(lookup_frame);
            sm_p->u.aio_mkdir.parent_ref.fs_id = lookup_fs_id;
            sm_p->u.aio_mkdir.parent_ref.handle = parent.handle;
            js_p->error_code = MKDIR_DIR_REF_FOUND;
        }
        else
        {
            PINT_sm_push_frame(smcb, 0, (void *)lookup_frame);
            js_p->error_code = MKDIR_LOOKUP_SM;

            gossip_debug(GOSSIP_CLIENT_DEBUG, "lookup got: %s (parent %llu)\n",
                         path, llu(parent.handle));
        }
    }

    return SM_ACTION_COMPLETE;
}

static PINT_sm_action mkdir_parent_ref_abs_lookup_inspect(
        struct PINT_smcb *smcb, job_status_s *js_p)
{
    struct PINT_client_sm *sm_p = PINT_sm_frame(smcb, PINT_FRAME_CURRENT);
    int frame_id, frames_remaining;

    gossip_debug(GOSSIP_CLIENT_DEBUG, "aio_mkdir state: parent_ref_abs_lookup_inspect"                  "\n");

    struct PINT_client_sm *lookup_frame = (PINT_client_sm *)PINT_sm_pop_frame(
                                 smcb, &frame_id, &js_p->error_code,
                                 &frames_remaining);
    js_p->error_code = lookup_frame->error_code;
    if (js_p->error_code < 0)
    {
        free(lookup_frame);
        return SM_ACTION_COMPLETE;
    }

    sm_p->u.aio_mkdir.parent_ref = sm_p->u.aio_mkdir.lookup_resp.ref;
    free(lookup_frame);

    return SM_ACTION_COMPLETE;
}

static PINT_sm_action mkdir_parent_ref_rel_lookup_setup(
        struct PINT_smcb *smcb, job_status_s *js_p)
{
    struct PINT_client_sm *sm_p = PINT_sm_frame(smcb, PINT_FRAME_CURRENT);
    int ret = 0;

    gossip_debug(GOSSIP_CLIENT_DEBUG, "aio_mkdir: parent_ref_rel_lookup_setup\n");

    sm_p->u.aio_mkdir.cur = (char *)sm_p->u.aio_mkdir.directory;
    sm_p->u.aio_mkdir.last = (char *)sm_p->u.aio_mkdir.directory;
    sm_p->u.aio_mkdir.start = (char *)sm_p->u.aio_mkdir.directory;

    /* loop over chars to find a complete path segment */
    /* that is no longer than PVFS_NAME_MAX chars */
    while (*(sm_p->u.aio_mkdir.cur))
    {
        /* find next path seperator / */
        /* cur either points to a slash */
        /* or the first char of the path */
        /* there must be at least one */
        /* so n either case increment it first */
        for(sm_p->u.aio_mkdir.cur++;
            (*sm_p->u.aio_mkdir.cur && *sm_p->u.aio_mkdir.cur != '/');
            sm_p->u.aio_mkdir.cur++);
        if (sm_p->u.aio_mkdir.cur - sm_p->u.aio_mkdir.start > PVFS_NAME_MAX-1)
        {
            /* we over-shot the limit go back to last */
            sm_p->u.aio_mkdir.cur = sm_p->u.aio_mkdir.last;
            if (sm_p->u.aio_mkdir.cur == sm_p->u.aio_mkdir.start)
            {
                js_p->error_code = -PVFS_ENAMETOOLONG;
                return SM_ACTION_COMPLETE;
            }
            break;
        }
        else
        {
            /* set up to add the next path segment */
            sm_p->u.aio_mkdir.last = sm_p->u.aio_mkdir.cur;
        }
    }

    sm_p->u.aio_mkdir.current_seg_path = malloc(PVFS_NAME_MAX);
    if (sm_p->u.aio_mkdir.current_seg_path == NULL)
    {
        js_p->error_code = -PVFS_ENOMEM;
        return SM_ACTION_COMPLETE;
    }

    memset(sm_p->u.aio_mkdir.current_seg_path, 0, PVFS_NAME_MAX);
    strncpy(sm_p->u.aio_mkdir.current_seg_path, sm_p->u.aio_mkdir.start,
            sm_p->u.aio_mkdir.cur - sm_p->u.aio_mkdir.start + 2);
    sm_p->u.aio_mkdir.start = sm_p->u.aio_mkdir.cur;
    sm_p->u.aio_mkdir.last = sm_p->u.aio_mkdir.cur;

    PINT_client_sm *lookup_frame = malloc(sizeof(PINT_client_sm));
    if (lookup_frame == NULL)
    {
        js_p->error_code = -PVFS_ENOMEM;
        return SM_ACTION_COMPLETE;
    }
    memset(lookup_frame, 0, sizeof(PINT_client_sm));

    PINT_init_msgarray_params(lookup_frame, sm_p->u.aio_mkdir.pdir->fs_id);
    PINT_init_sysint_credential(lookup_frame->cred_p, sm_p->cred_p);
    lookup_frame->u.lookup.orig_pathname = sm_p->u.aio_mkdir.current_seg_path;
    lookup_frame->u.lookup.starting_refn = *(sm_p->u.aio_mkdir.pdir);
    lookup_frame->u.lookup.lookup_resp = &(sm_p->u.aio_mkdir.lookup_resp);
    lookup_frame->u.lookup.follow_link = PVFS2_LOOKUP_LINK_FOLLOW;
    lookup_frame->u.lookup.current_context = 0;
    PVFS_hint_copy(sm_p->hints, &(lookup_frame->hints));
    PVFS_hint_add(&(lookup_frame->hints), PVFS_HINT_HANDLE_NAME,
                  sizeof(PVFS_handle),
                  &(sm_p->u.aio_mkdir.pdir->handle));

    ret = initialize_context(&(lookup_frame->u.lookup),
                             sm_p->u.aio_mkdir.current_seg_path,
                             *(sm_p->u.aio_mkdir.pdir));
    if (ret != 0)
    {
        gossip_err("aio-mkdir: failed to init context (path = %s)\n",
                   sm_p->u.aio_mkdir.current_seg_path);
        free(lookup_frame);
        js_p->error_code = ret;
        return SM_ACTION_COMPLETE;
    }

    if (lookup_frame->u.lookup.current_context == 0 &&
        lookup_frame->u.lookup.contexts[0].total_segments == 0)
    {
        free(lookup_frame);
        free(sm_p->u.aio_mkdir.current_seg_path);
        sm_p->u.aio_mkdir.parent_ref.fs_id = sm_p->u.aio_mkdir.pdir->fs_id;
        sm_p->u.aio_mkdir.parent_ref.handle = sm_p->u.aio_mkdir.pdir->handle;
        js_p->error_code = MKDIR_DIR_REF_FOUND;
    }
    else
    {
        js_p->error_code = MKDIR_LOOKUP_SM;
        PINT_sm_push_frame(smcb, 0, (void *)lookup_frame);

        gossip_debug(GOSSIP_CLIENT_DEBUG, "lookup got: %s (parent %llu)\n",
                     sm_p->u.aio_mkdir.current_seg_path,
                     llu(sm_p->u.aio_mkdir.pdir->handle));
    }

    return SM_ACTION_COMPLETE;
}

static PINT_sm_action mkdir_parent_ref_rel_lookup_inspect(
        struct PINT_smcb *smcb, job_status_s *js_p)
{
    struct PINT_client_sm *sm_p = PINT_sm_frame(smcb, PINT_FRAME_CURRENT);
    int ret = 0;
    int frame_id, frames_remaining;

    gossip_debug(GOSSIP_CLIENT_DEBUG, "aio_mkdir: parent_ref_rel_lookup_inspect\n");

    struct PINT_client_sm *lookup_frame = (PINT_client_sm *)PINT_sm_pop_frame(
                                smcb, &frame_id,
                                &js_p->error_code, &frames_remaining);

    js_p->error_code = lookup_frame->error_code;
    if (js_p->error_code)
    {
        free(lookup_frame);
        return SM_ACTION_COMPLETE;
    }

    if (*(sm_p->u.aio_mkdir.cur))
    {
        /* loop over chars to find a complete path segment */
        /* that is no longer than PVFS_NAME_MAX chars */
        while(*(sm_p->u.aio_mkdir.cur))
        {
            /* find next path seperator / */
            /* cur either points to a slash */
            /* or the first char of the path */
            /* there must be at least one */
            /* so n either case increment it first */
            for(sm_p->u.aio_mkdir.cur++;
                (*sm_p->u.aio_mkdir.cur && *sm_p->u.aio_mkdir.cur != '/');
                 sm_p->u.aio_mkdir.cur++);
            if (sm_p->u.aio_mkdir.cur - sm_p->u.aio_mkdir.start > PVFS_NAME_MAX-1)
            {
                /* we over-shot the limit go back to last */
                sm_p->u.aio_mkdir.cur = sm_p->u.aio_mkdir.last;
                if (sm_p->u.aio_mkdir.cur == sm_p->u.aio_mkdir.start)
                {
                    free(lookup_frame);
                    js_p->error_code = -PVFS_ENAMETOOLONG;
                    return SM_ACTION_COMPLETE;
                }
                break;
            }
            else
            {
                /* set up to add the next path segment */
                sm_p->u.aio_mkdir.last = sm_p->u.aio_mkdir.cur;
            }
        }

        memset(sm_p->u.aio_mkdir.current_seg_path, 0, PVFS_NAME_MAX);
        strncpy(sm_p->u.aio_mkdir.current_seg_path, sm_p->u.aio_mkdir.start,
                sm_p->u.aio_mkdir.cur - sm_p->u.aio_mkdir.start + 1);
        sm_p->u.aio_mkdir.start = sm_p->u.aio_mkdir.cur;
        sm_p->u.aio_mkdir.last = sm_p->u.aio_mkdir.cur;

        lookup_frame->u.lookup.orig_pathname = sm_p->u.aio_mkdir.current_seg_path;
        lookup_frame->u.lookup.starting_refn = sm_p->u.aio_mkdir.lookup_resp.ref;
        lookup_frame->u.lookup.follow_link = PVFS2_LOOKUP_LINK_FOLLOW;
        lookup_frame->u.lookup.current_context = 0;

        ret = initialize_context(&(lookup_frame->u.lookup),
                                 sm_p->u.aio_mkdir.current_seg_path,
                                 sm_p->u.aio_mkdir.lookup_resp.ref);
        if (ret != 0)
        {
            gossip_err("aio-mkdir: failed to init context (path = %s)\n",
                       sm_p->u.aio_mkdir.current_seg_path);
            free(lookup_frame);
            js_p->error_code = ret;
            return SM_ACTION_COMPLETE;
        }

        if (lookup_frame->u.lookup.current_context == 0 &&
            lookup_frame->u.lookup.contexts[0].total_segments == 0)
        {
            free(lookup_frame);
            free(sm_p->u.aio_mkdir.current_seg_path);
            js_p->error_code = MKDIR_DIR_REF_FOUND;
            sm_p->u.aio_mkdir.parent_ref.handle = sm_p->u.aio_mkdir.lookup_resp.ref.handle;
            sm_p->u.aio_mkdir.parent_ref.fs_id = sm_p->u.aio_mkdir.pdir->fs_id;
        }
        else
        {
            js_p->error_code = MKDIR_LOOKUP_SM;
            PINT_sm_push_frame(smcb, 0, (void *)lookup_frame);

            gossip_debug(GOSSIP_CLIENT_DEBUG, "lookup got: %s (parent %llu)\n",
                         sm_p->u.aio_mkdir.current_seg_path,
                         llu(sm_p->u.aio_mkdir.lookup_resp.ref.handle));
        }
    }
    else
    {
        js_p->error_code = MKDIR_DIR_REF_FOUND;
        sm_p->u.aio_mkdir.parent_ref = lookup_frame->u.lookup.lookup_resp->ref;
        free(lookup_frame);
        free(sm_p->u.aio_mkdir.current_seg_path);
    }

    return SM_ACTION_COMPLETE;
}

static PINT_sm_action mkdir_sm_setup(
        struct PINT_smcb *smcb, job_status_s *js_p)
{
    struct PINT_client_sm *sm_p = PINT_sm_frame(smcb, PINT_FRAME_CURRENT);
    js_p->error_code = 0;
    PVFS_sys_attr attr;

    gossip_debug(GOSSIP_CLIENT_DEBUG, "aio_mkdir: sm_setup\n");

    memset(&attr, 0, sizeof(PVFS_sys_attr));
    attr.owner = geteuid();
    attr.group = getegid();
    attr.perms = sm_p->u.aio_mkdir.mode & 07777;
    attr.mask = (PVFS_ATTR_SYS_ALL_SETABLE);

    if ((sm_p->u.aio_mkdir.parent_ref.handle == PVFS_HANDLE_NULL) ||
        (sm_p->u.aio_mkdir.parent_ref.fs_id == PVFS_FS_ID_NULL))
    {
        gossip_err("invalid (NULL) required arguments\n");
        js_p->error_code = -PVFS_EINVAL;
        return SM_ACTION_COMPLETE;
    }

    if ((strlen(sm_p->u.aio_mkdir.filename) + 1) > PVFS_REQ_LIMIT_SEGMENT_BYTES)
    {
        js_p->error_code = -PVFS_ENAMETOOLONG;
        return SM_ACTION_COMPLETE;
    }

    PINT_client_sm *mkdir_frame = malloc(sizeof(PINT_client_sm));
    if (!mkdir_frame)
    {
        js_p->error_code = -PVFS_ENOMEM;
        return SM_ACTION_COMPLETE;
    }
    memset(mkdir_frame, 0, sizeof(PINT_client_sm));

    PINT_init_msgarray_params(mkdir_frame, sm_p->u.aio_mkdir.parent_ref.fs_id);
    PINT_init_sysint_credential(mkdir_frame->cred_p, sm_p->cred_p);
    mkdir_frame->u.mkdir.object_name = (char *)sm_p->u.aio_mkdir.filename;
    PVFS_util_copy_sys_attr(&mkdir_frame->u.mkdir.sys_attr, &attr);
    mkdir_frame->u.mkdir.mkdir_resp = &(sm_p->u.aio_mkdir.mkdir_resp);
    mkdir_frame->u.mkdir.stored_error_code = 0;
    mkdir_frame->object_ref = sm_p->u.aio_mkdir.parent_ref;
    PVFS_hint_copy(sm_p->hints, &mkdir_frame->hints);
    PVFS_hint_add(&mkdir_frame->hints, PVFS_HINT_HANDLE_NAME, sizeof(PVFS_handle), 
                  &(sm_p->u.aio_mkdir.parent_ref.handle));

    PINT_sm_push_frame(smcb, 0, (void *)mkdir_frame);

    gossip_debug(GOSSIP_CLIENT_DEBUG, "Creating directory named %s under "
                 "parent handle %llu on fs %d\n", sm_p->u.aio_mkdir.filename,
                 llu(sm_p->u.aio_mkdir.parent_ref.handle),
                 sm_p->u.aio_mkdir.parent_ref.fs_id);

    return SM_ACTION_COMPLETE;
}

static PINT_sm_action mkdir_sm_inspect(
        struct PINT_smcb *smcb, job_status_s *js_p)
{
    int frame_id, frames_remaining;
    
    struct PINT_client_sm *mkdir_frame = (PINT_client_sm *)PINT_sm_pop_frame(
                            smcb, &frame_id, &js_p->error_code, &frames_remaining);

    free(mkdir_frame);

    return SM_ACTION_COMPLETE;
}

static PINT_sm_action mkdir_cleanup(
        struct PINT_smcb *smcb, job_status_s *js_p)
{
    struct PINT_client_sm *sm_p = PINT_sm_frame(smcb, PINT_FRAME_CURRENT);

    if (sm_p->u.aio_mkdir.current_seg_path)
        free(sm_p->u.aio_mkdir.current_seg_path);

    sm_p->error_code = js_p->error_code;

    PINT_SET_OP_COMPLETE;
    return SM_ACTION_TERMINATE;
}

