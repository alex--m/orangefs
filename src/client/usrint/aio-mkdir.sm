PVFS_error PVFS_iaio_mkdir(
    const char *directory,
    const char *filename,
    PVFS_object_ref *pdir,
    mode_t mode,
    const PVFS_credential *credential,
    PVFS_sys_op_id *op_id,
    PVFS_hint hints,
    void *user_ptr)
{
    int ret = -PVFS_EINVAL; 
    PINT_smcb *smcb = NULL;
    PINT_client_sm *sm_p = NULL;

    gossip_debug(GOSSIP_CLIENT_DEBUG, "PVFS_iaio_mkdir entered\n");

    if (!directory || !filename)
    {
        gossip_err("invalid (NULL) required arguments\n");
        return ret;
    }

    PINT_smcb_alloc(&smcb, PVFS_AIO_MKDIR, sizeof(struct PINT_client_sm),
                    client_op_state_get_machine,
                    client_state_machine_terminate,
                    pint_client_sm_context);
    if (smcb == NULL)
    {
        return -PVFS_ENOMEM;
    }
    sm_p = PINT_sm_frame(smcb, PINT_FRAME_CURRENT);
    
    PINT_init_sysint_credential(sm_p->cred_p, credential);
    PVFS_hint_copy(hints, &(sm_p->hints));
    sm_p->u.aio_mkdir.directory = directory;
    sm_p->u.aio_mkdir.filename = filename;
    sm_p->u.aio_mkdir.pdir = pdir;
    sm_p->u.aio_mkdir.mode = mode;   

    return PINT_client_state_machine_post(
        smcb, op_id, user_ptr);
}

PVFS_error PVFS_aio_mkdir(
    const char *directory,
    const char *filename,
    PVFS_object_ref *pdir,
    mode_t mode,
    const PVFS_credential *credential,
    PVFS_hint hints)
{
    PVFS_error ret = -PVFS_EINVAL, error = 0;
    PVFS_sys_op_id op_id;

    gossip_debug(GOSSIP_CLIENT_DEBUG, "PVFS_aio_mkdir entered\n");

    ret = PVFS_iaio_mkdir(directory, filename, pdir, mode, credential, &op_id,
                          hints, NULL);

    if (ret)
    {
        PVFS_perror_gossip("PVFS_iaio_mkdir call", ret);
        error = ret;
    }
    else
    {
        ret = PVFS_sys_wait(op_id, "aio_mkdir", &error);
        if (ret)
        {
            PVFS_perror_gossip("PVFS_sys_wait call", ret);
            error = ret;
        }
    }

    PINT_sys_release(op_id);
    return error;
}

