#include "pvfs2-aio.h"
#include "client-state-machine.h"
#include "str-utils.h"
#include "pvfs2-internal.h"

extern job_context_id pint_client_sm_context;

enum
{
    MKDIR_PDIR_NULL = 675,
    MKDIR_DIR_REF_FOUND,
    MKDIR_LOOKUP_SM
};

/* helper function prototypes */
static int initialize_context(
    struct PINT_client_lookup_sm * lookup_sm,
    char *pathname,
    PVFS_object_ref ctx_starting_refn);

%%

machine pvfs2_client_aio_mkdir_sm
{
    state init
    {
        run mkdir_init;
        MKDIR_PDIR_NULL => parent_ref_abs_lookup_setup;
        MKDIR_DIR_REF_FOUND => sm_setup;
        default => parent_ref_rel_lookup_setup;
    }

    state parent_ref_abs_lookup_setup
    {
        run mkdir_parent_ref_abs_lookup_setup;
        MKDIR_LOOKUP_SM => parent_ref_abs_lookup;
        MKDIR_DIR_REF_FOUND => sm_setup;
        default => cleanup;
    }

    state parent_ref_abs_lookup
    {
        jump pvfs2_client_lookup_sm;
        default => parent_ref_abs_lookup_inspect;
    }

    state parent_ref_abs_lookup_inspect
    {
        run mkdir_parent_ref_abs_lookup_inspect;
        success => sm_setup;
        default => cleanup;
    }

    state parent_ref_rel_lookup_setup
    {
        run mkdir_parent_ref_rel_lookup_setup;
        MKDIR_DIR_REF_FOUND => sm_setup;
        MKDIR_LOOKUP_SM => parent_ref_rel_lookup;
        default => cleanup;
    }

    state parent_ref_rel_lookup
    {
        jump pvfs2_client_lookup_sm;
        default => parent_ref_rel_lookup_inspect;
    }

    state parent_ref_rel_lookup_inspect
    {
        run mkdir_parent_ref_rel_lookup_inspect;
        MKDIR_LOOKUP_SM => parent_ref_rel_lookup;
        MKDIR_DIR_REF_FOUND => sm_setup;
        default => cleanup;
    }

    state sm_setup
    {
        run mkdir_sm_setup;
        success => sm_run;
        default => cleanup;
    }

    state sm_run
    {
        jump pvfs2_client_mkdir_sm;
        default => sm_inspect;
    }

    state sm_inspect
    {
        run mkdir_sm_inspect;
        default => cleanup;
    }

    state cleanup
    {
        run mkdir_cleanup;
        default => terminate;
    }
}

